<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/widget33"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/canvas_roster"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/chatboxheader_left"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="20dp"
            android:textColor="@color/Green"
            android:clickable="true"


            />
        <ImageView
                android:id="@+id/chatboxheader_roster"
                android:layout_height="30dp"
                android:layout_width="30dp"


                android:layout_gravity="center"
                android:src="@drawable/chat3"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:onClick="GotoRoster"
            />
        <TextView
                android:id="@+id/chatboxheader_right"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=""
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textColor="@color/Green"
            />
        </LinearLayout>
    <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/Gray">
    </android.support.v4.view.ViewPager>
    <TextView
        android:id="@+id/chatbox_networknotification"
        android:layout_height="20dp"
        android:layout_width="fill_parent"
        android:text="Connection Lost - retrying "
        android:background="@color/Green"
        android:visibility="gone"
        />
    <LinearLayout
            android:id="@+id/widget38"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="@color/White">
        <EditText
                android:id="@+id/message"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:hint="Enter Messsage"
                android:textColor="@color/Black"
                android:layout_weight="1"
                android:textSize="18sp" />
        <Button
                android:id="@+id/sendmessage"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:text="Send"

                android:onClick="SendChat"/>
    </LinearLayout>
</LinearLayout>
