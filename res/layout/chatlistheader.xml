<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@color/White"

        >

    <ImageButton
        android:id="@+id/chatfragment_image"
        android:paddingTop="5dp"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@drawable/images"
        android:scaleType="fitXY"

        />
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/chatfragment_jid"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="hey"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/chatfragment_status"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:text="This is my status message"
            />

        </LinearLayout>
        <TextView
            android:id="@+id/chatheader_presence"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"

            android:textSize="10dp"
            android:text="away"
            />
    <ImageView
        android:id="@+id/chatlistheader_close"
        android:layout_height="20dp"
        android:layout_width="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/cross"
        android:scaleType="fitXY"
        android:clickable="true"

        />
</LinearLayout>