<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="50dp"
              android:orientation="horizontal"
              android:background="@color/White"
        >
    <ImageView
        android:id="@+id/accountitem_icon"
        android:layout_height="fill_parent"
        android:layout_width="50dp"
        android:src="@drawable/pingpong_icon"
        />
    <TextView
        android:id="@+id/accountitem_jid"
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="@color/Black"
        android:text="vinayak.bhavnani@gmail.com"
        />
    <ImageView
        android:id="@+id/accountitem_presence"
        android:layout_height="fill_parent"
        android:layout_width="10dp"
        android:src="@drawable/green"
        android:scaleType="center"
        />
    <ImageView
        android:id="@+id/accountitem_settings"
        android:layout_height="fill_parent"
        android:layout_width="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/settings"
        android:clickable="true"
        android:onClick="accountSettings"
        />


</LinearLayout>